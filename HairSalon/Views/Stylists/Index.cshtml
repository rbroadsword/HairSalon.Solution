@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div class="container">
  <h1 class="text-center">~Stylists~</h1>

  @if (@Model.Count == 0)
  {
    <h3>No stylists have been added yet!</h3>
  } 

  <table class="table">
    <thead class="thead-light">
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Specialty</th>
    </thead>
    <tbody>
      @foreach(Stylist stylist in Model)
      {
        <tr>  
          <th scope="row">@Html.DisplayFor(modelStylist => stylist.StylistId)</th>
          <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
          <td>@Html.DisplayFor(modelStylist => stylist.Specialty)</td>
        </tr>
      }
    </tbody>
  </table>

  <p class="text-center navMenu" >@Html.ActionLink("Add new stylist", "Create")</p>
</div>

