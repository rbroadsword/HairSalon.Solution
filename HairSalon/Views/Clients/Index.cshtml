@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1 class="text-center">~Clients~</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

  <table class="table">
    <thead class="thead-light">
      <th scope="col">#</th>
      <th scope="col">Client Name</th>
      <th scope="col">Stylist</th>
    </thead>
    <tbody>
      @foreach(Client client in Model)
      {
        <tr>  
          <th scope="row">@Html.DisplayFor(modelStylist => client.ClientId)</th>
          <td>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</td>
          <td>@Html.DisplayFor(modelStylist => client.Stylist.Name)</td>
        </tr>
      }
    </tbody>
  </table>



<p class="navMenu text-center">@Html.ActionLink("Add new client", "Create")</p>
